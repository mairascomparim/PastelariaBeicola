    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Subcat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nm_Prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vl_Prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ds_Prod)
