            <th>
                @Html.DisplayNameFor(model => model.Id_Subcat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nm_Prod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vl_Prod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ds_Prod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Av_Prod)
            </th>
            <th>
