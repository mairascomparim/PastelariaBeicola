                @Html.DisplayFor(modelItem => item.Av_Prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pic_Prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.St_Prod)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Prod">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Prod">Details</a> |
